@page
@model Photo_Upload_Core_Web_app.Pages.Uploaders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Uploaders</h1>

<p>
    <a class="btn btn-outline-success" asp-page="Create">Add an Uploader</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uploader[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uploader[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Uploader) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-outline-success"  asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-success" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-success" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
